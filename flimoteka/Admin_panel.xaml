<Window x:Class="flimoteka.Admin_panel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:flimoteka"
        mc:Ignorable="d"
        Title="Панель администратора" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Button" HorizontalAlignment="Left" Margin="715,10,0,0" VerticalAlignment="Top" Height="32" Width="75" Click="Button_Click"/>
        <TextBox x:Name="text_id"  HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" materialDesign:HintAssist.Hint="ИД Пользователя" VerticalAlignment="Top" Width="700" Height="32" TextChanged="TextBox_TextChanged"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,47,10,10"/>
    </Grid>
</Window>
